@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrieren";
}

<div class="row login__row">
    <div class="col d-none d-md-block login__img">
    </div>
    <div class="col login__form align-self-center">
        <form id="account" method="post" class="p-4">
            <div class="mb-3">
                <span>Willkommen bei MyPerformance</span>
                <h2>Registrieren</h2>
                <p class="text-muted">Die Registrierung ist nur für Schüler*innen möglich.</p>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.SchoolClass"></label>
                <input asp-for="Input.SchoolClass" class="form-control" />
                <span asp-validation-for="Input.SchoolClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.EmailApprenticeTrainer"></label>
                <input asp-for="Input.EmailApprenticeTrainer" class="form-control" />
                <span asp-validation-for="Input.EmailApprenticeTrainer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Passwort</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Passwort wiederholen</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary btn-block">Registrieren</button>

            </div>
            <div class="form-group">
                <p class="d-inline">Sie haben bereits einen Account?</p>
                <a class="d-inline" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login</a>
            </div>
        </form>
    </div>
</div>

